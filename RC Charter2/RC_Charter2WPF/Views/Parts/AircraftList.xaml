<UserControl
	x:Class="RC_Charter2WPF.Views.Parts.AircraftList"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:RC_Charter2WPF.Views.Parts"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DesignHeight="450"
	d:DesignWidth="800"
	mc:Ignorable="d">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="8*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<Grid Grid.Row="0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>
			<TextBox
				x:Name="TbxAircraftSearch"
				Grid.Column="0"
				MaxHeight="38"
				Margin="4,4,50,4"
				Padding="4"
				Text="{Binding Path=AircraftSearchText, UpdateSourceTrigger=PropertyChanged, Delay=300}" />
			<Button
				x:Name="BtnConfirmSelectedAircraft"
				Grid.Column="1"
				Margin="4"
				Padding="4"
				Command="{Binding Path=ConfirmSelectedAircraftCommand}"
				Content="Confirm" />
		</Grid>
		<ListBox
			x:Name="LbxAircraft"
			Grid.Row="1"
			MinWidth="150"
			Margin="4,0,4,4"
			Padding="4"
			ItemsSource="{Binding Path=AircraftList}"
			SelectedItem="{Binding Path=SelectedAircraft}">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<StackPanel Orientation="Horizontal">
						<TextBlock
							Margin="4,4,0,4"
							Padding="4,4,0,4"
							Text="{Binding Path=AircraftNumber}" />
						<TextBlock Text=" " />
						<TextBlock
							Margin="0,4,4,4"
							Padding="0,4,4,4"
							Text="{Binding Path=Model}" />
					</StackPanel>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
		<Grid Grid.Row="2">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="2*" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="2*" />
			</Grid.ColumnDefinitions>
			<Button
				Grid.Column="0"
				Padding="8,5"
				HorizontalAlignment="Right"
				VerticalAlignment="Center"
				BorderThickness="0"
				Command="{Binding Path=PrevPageAircraftCommand}"
				Content="Prev" />
			<local:ListBoxItemScroll
				Grid.Column="1"
				Margin="8,0"
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				BorderThickness="0"
				ItemsSource="{Binding Path=AircraftPages}"
				ScrollViewer.HorizontalScrollBarVisibility="Hidden"
				SelectedItem="{Binding Path=SelectedAircraftPage, Mode=TwoWay}">
				<ListBox.ItemsPanel>
					<ItemsPanelTemplate>
						<WrapPanel Orientation="Horizontal" />
					</ItemsPanelTemplate>
				</ListBox.ItemsPanel>
			</local:ListBoxItemScroll>

			<Button
				Grid.Column="2"
				Padding="8,5"
				HorizontalAlignment="Left"
				VerticalAlignment="Center"
				BorderThickness="0"
				Command="{Binding Path=NextPageAircraftCommand}"
				Content="Next" />
		</Grid>
	</Grid>
</UserControl>
