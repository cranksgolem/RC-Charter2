<UserControl x:Class="RC_Charter2WPF.Views.Parts.CustomerList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RC_Charter2WPF.Views.Parts"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
		<ListBox
			MinWidth="150"
			Margin="4,0,4,4"
			Padding="4"
			ItemsSource="{Binding Path=CustomerList}"
			SelectedItem="{Binding Path=SelectedCustomer}">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Padding="0,3" Text="{Binding Path=Name}" />
				</DataTemplate>
			</ListBox.ItemTemplate>
			<ListBox.GroupStyle>
				<GroupStyle>
					<GroupStyle.ContainerStyle>
						<Style TargetType="{x:Type GroupItem}">
							<Setter Property="Template">
								<Setter.Value>
									<ControlTemplate TargetType="{x:Type GroupItem}">
										<Expander Header="{Binding Path=Name}" IsExpanded="True">
											<ItemsPresenter Margin="10,0,0,0" />
										</Expander>
									</ControlTemplate>
								</Setter.Value>
							</Setter>
						</Style>
					</GroupStyle.ContainerStyle>
				</GroupStyle>
			</ListBox.GroupStyle>
		</ListBox>
	</Grid>
</UserControl>
