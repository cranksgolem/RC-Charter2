<UserControl
	x:Class="RC_Charter2WPF.Views.Parts.EmployeeDetails"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:RC_Charter2WPF.Views.Parts"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DesignHeight="450"
	d:DesignWidth="800"
	mc:Ignorable="d">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition />
		</Grid.RowDefinitions>
		<Grid Grid.Row="0">
			<Border
				Margin="10,0,10,0"
				BorderBrush="Black"
				BorderThickness="0,0,0,1">
				<TextBlock
					Margin="4"
					Padding="4"
					FontSize="20"
					Text="Selected Employee Licenses: " />
			</Border>
		</Grid>
		<Grid Grid.Row="1">
			<ListBox
				Margin="4"
				Padding="4"
				ItemsSource="{Binding Path=SelectedEmployeeLicenses}">
				<ListBox.ItemTemplate>
					<DataTemplate>
						<StackPanel Margin="4" Orientation="Horizontal">
							<TextBlock Text="{Binding Path=LicenseType}" />
							<TextBlock Text=" - " />
							<TextBlock Text="{Binding Path=Description}" />
						</StackPanel>
					</DataTemplate>
				</ListBox.ItemTemplate>
			</ListBox>
		</Grid>
	</Grid>
</UserControl>
