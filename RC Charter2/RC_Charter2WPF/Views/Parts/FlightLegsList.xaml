<UserControl
	x:Class="RC_Charter2WPF.Views.Parts.FlightLegsList"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:RC_Charter2WPF.Views.Parts"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DesignHeight="450"
	d:DesignWidth="800"
	mc:Ignorable="d">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition />
		</Grid.RowDefinitions>
		<Grid Grid.Row="0">
			<TextBlock
				Margin="4"
				Padding="4"
				FontSize="30"
				Text="Flight Legs" />
		</Grid>
		<Grid Grid.Row="1">
			<ListBox
				x:Name="LbFlightLegs"
				Margin="4,0,4,4"
				Padding="4"
				ItemsSource="{Binding Path=FlightList}"
				SelectedItem="{Binding Path=SelectedFlight}">
				<ListBox.ItemTemplate>
					<DataTemplate>
						<TextBlock
							Margin="4"
							Padding="4"
							Text="{Binding Path=FlightId}" />
					</DataTemplate>
				</ListBox.ItemTemplate>
			</ListBox>
		</Grid>
	</Grid>
</UserControl>
